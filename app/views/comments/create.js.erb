<% if @commentable.class.name == "Comment" %>
  $("#comments-comment-<%= @commentable.id %>").children('.comment-comments').first().append('<%= escape_javascript(render partial: 'comments/comment', object: @comment) %>');
  $("#comments-comment-<%= @commentable.id %> #comment_content").val('');
<% else %>
  $("#comments-post-<%= @commentable.id %> .post-comments").append('<%= escape_javascript(render partial: 'comments/comment', object: @comment) %>');
  $("#comments-post-<%= @commentable.id %> #comments-count").html('<%= escape_javascript("#{@commentable.comments.count} Comments") %>');
  $("#comments-post-<%= @commentable.id %> #comment_content").val('');
<% end %>
